<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/main_entrance_zhihu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_main_button"
        android:elevation="2dp"
        android:gravity="center"
        android:text="@string/zhihu_text"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/main_entrance_gank"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_main_button"
        android:elevation="2dp"
        android:gravity="center"
        android:text="@string/gank_text"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/main_entrance_dribbble"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_main_button"
        android:elevation="2dp"
        android:gravity="center"
        android:text="@string/dribbble"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>
</LinearLayout>